/* ----- CAMBIO: ESTILOS FILTER MENU ----- */
  

  .filter-group .selected div {
      border-left: solid 9px {{ settings.sidebar_nav_color_hover }};
  }

  .collection-name a {
      border-left: none!important;
  }

  .collection-name a:hover {
      border-left: solid 2px!important;
  }
  
  .active.selected .collection-name a {
    border-left: none;
  }

  .filter-group {
      position: relative;
      padding: 0;
  }

  .filter-group .filter-clear {
      position: absolute;
      top: 5px;
      right: 10px;
      border-radius: 10px;
      padding: 0 5px;
      background-color: #EEE;
      text-decoration: none;
  }

  .filter-group .filter-clear:hover {
      background-color: #DDD;
  }

  .filter-group li a {
      display: inline;
      left: 1px;
  }

  /* Para que en la vista movil los botones clear y view all se vean mejor */
  a.filter-clear {
    margin-right: 20px;
    @media only screen and (max-width: 1000px){
      margin-top: -5px;
    }
  }
  
  
